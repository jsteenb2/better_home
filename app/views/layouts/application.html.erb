  </head>

  <body>
    <%= render "shared/nav" if current_user%>
    <div class="container">
      <%= yield %>

    </div>
    <footer class="footer row">

      <div class="col-md-4 col-md-offset-4">

        <p class="footer-text">&copy; Better Home 2016</p>
      </div>
    </footer>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
